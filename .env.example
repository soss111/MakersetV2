# Database
DATABASE_URL=postgresql://user:password@localhost:5432/makerset_db
# Or for Netlify:
# NETLIFY_DATABASE_URL=postgresql://...

# JWT
JWT_SECRET=change-me-to-a-random-secret-in-production
JWT_EXPIRES_IN=7d

# Environment
NODE_ENV=development

# Email (optional, for invoice emails)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=user@example.com
# SMTP_PASS=password

# Frontend API URL (optional, defaults to localhost:8888 for Netlify Dev)
# REACT_APP_API_URL=http://localhost:8888
